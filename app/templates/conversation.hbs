<div class="not-replied-surveys clearfix">
  {{#if currentSurvey }}
    <div class="side" {{action 'prevSurvey'}}>
      <i class=" icon-chevron-left"></i>
    </div>
    <div class="content">
      <p>
        {{currentSurvey.message.content}}
      </p>
      <small>{{timeAgo currentSurvey.createdAt}}</small>
      <div class="buttons pull-right">
        <button class="btn btn-success" {{action 'confirmSurvey' currentSurvey}}>同意</button>
        <button class="btn" {{action 'remainNeutralSurvey' currentSurvey}}>中立</button>
        <button class="btn btn-danger" {{action 'rejectSurvey' currentSurvey}}>拒绝</button>
      </div>
    </div>
    <div class="side" {{action 'nextSurvey'}}>
      <i class=" icon-chevron-right"></i>
    </div>
  {{else}}
    <p class="alert">没有参与任何调查</p>
  {{/if}}
</div>
<div class="clearfix"></div>
<div class="messages">
  <div class="centent">
    <ul>
      {{#each messages}}
        <li {{bindAttr class='isOut:pull-right:pull-left'}}>
          <div {{bindAttr class=":alert isOut:alert-success:alert-info"}}>
            <p>{{content}}</p>
            <small>{{timeAgo createdAt}}</small>
          </div>
        </li>
        <li class="clearfix"></li>
      {{/each}}
    </ul>
  </div>
  <footer>
    <input class="pull-left" type="text">
    <button class="btn pull-right">发送</button>
  </footer>
</div>
