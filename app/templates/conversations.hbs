<div class="inkylike-toolbar">
  <ul>
    <li><a href="#" {{action showNewMessagePopup}}><i class="icon-edit"></i> 发信息</a></li>
  </ul>
</div>
<div class="content">
  <div class="left">
    <ul class="conversations">
      {{#each model}}
        <li>
          <h3>{{user.name}}</h3>
          <h3><i class="icon-user"></i> {{interlocutor.name}}（{{interlocutor.number}}）</h3>
          {{#linkTo 'contact' this}}
            <div class="summary clearfix">
              <div class="latest-message">
                <span class="message">{{interlocutor.latestMessage.sender.name}}：{{interlocutor.latestMessage.content}}</span>
                <span class="created-at pull-right">{{interlocutor.latestMessage.createdAt}}</span>
              </div>
              <div class="counts pull-right">
                <span class="surveys-count label label-important">调查 ({{interlocutor.notRepliedCount}})</span>
                <span class="messages-count label label-info">对话 ({{interlocutor.messagesCount}})</span>
              </div>
            </div>
          {{/linkTo}}
        </li>
      {{/each}}
    </ul>
  </div>

  <div class="right">
    {{outlet}}
  </div>
</div>
