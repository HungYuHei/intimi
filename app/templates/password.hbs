<ul class="toolbar-actions pull-toolbar">
  <li {{action 'save'}}>
    <i class="icon-save icon-large"></i>
    保存
  </li>
  <li {{action 'revertChanges'}}>
    <i class="icon-undo icon-large"></i>
    取消修改
  </li>
</ul>

<h2>
  修改密码
</h2>

<form>
  <ul class="fields">
    <li>
      <div class="add-on">旧密码</div>
      <div class="field">
        {{input type='password' value=oldPassword}}
      </div>
    </li>
    <li>
      <div class="add-on">新密码</div>
      <div class="field">
        {{input type='password' value=newPassword}}
      </div>
    </li>
    <li>
      <div class="add-on">密码确认</div>
      <div class="field">
        {{input type='password' value=passwordConfirmation}}
      </div>
    </li>
  </ul>
</form>
