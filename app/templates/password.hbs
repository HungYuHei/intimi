<h2>
  修改密码
</h2>

<form>
  <ul class="fields">
    <li>
      <div class="add-on">旧密码</div>
      <div class="field">
        {{input type='password' value=oldPassword}}
      </div>
    </li>
    <li>
      <div class="add-on">新密码</div>
      <div class="field">
        {{input type='password' value=newPassword}}
      </div>
    </li>
    <li>
      <div class="add-on">密码确认</div>
      <div class="field">
        {{input type='password' value=passwordConfirmation}}
      </div>
    </li>
  </ul>
</form>
